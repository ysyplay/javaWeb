    <!--配置文件形式-->
    <bean id="header" class="ysyplay.StraightHeader">
        <!--构造函数 注入-->
        <constructor-arg name="color" value="${color}"/>
        <constructor-arg name="size" value="${size}"/>
        <!--set注入-->
        <property name="weight" value="10g"></property>
    </bean>
    <bean id="headerProperties"
